{
    "extends": [
        "tslint:recommended",
        "tslint-react",
        "tslint-config-prettier"
    ],
    "linterOptions": {
        "exclude": [
            "config/**/*.js",
            "node_modules/**/*.ts"
        ]
    },
    "rules": {
        "jsx-no-lambda": false,
        "member-ordering": false,
        "no-shadowed-variable": false,
        "semicolon": [true, "never"],
        "trailing-comma": [true, {"multiline": "always", "singleline": "never"}],
        "quotemark": [true, "single"],
        "no-console": false
    }
}
